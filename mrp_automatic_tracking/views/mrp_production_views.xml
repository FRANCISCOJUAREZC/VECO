<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_mrp_production_mrp_automatic_tracking_form">
            <field name="name">view.mrp.production.mrp.automatic.tracking.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="set_manual_tracking" attrs="{'readonly': [('state', '!=', 'confirmed')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
