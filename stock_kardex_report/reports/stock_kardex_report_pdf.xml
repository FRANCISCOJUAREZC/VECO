<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_kardex_report_us_letter_horizontal" model="report.paperformat">
            <field name="name">Kárdex de inventario horizontal</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="stock_kardex_report_action" model="ir.actions.report">
            <field name="name">Kárdex de inventario</field>
            <field name="model">stock.kardex.report.wiz</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_kardex_report.stock_kardex_report_pdf</field>
            <field name="report_file">stock_kardex_report.stock_kardex_report_pdf</field>
            <field name="print_report_name">'Kárdex de inventario %s' %(time.strftime('%Y-%m-%d'))</field>
            <field name="binding_model_id" ref="model_stock_kardex_report_wiz"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="stock_kardex_report.stock_kardex_report_us_letter_horizontal"/>
        </record>

        <template id="stock_kardex_report_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                th, td {
                                padding: 5px;
                                font-family: Times New Roman;
                                font-size:11px;
                                font-weight: normal;
                                text-align: center;
                                vertical-align: middle;
                                }
                                th {
                                color: #AF8127;
                                font-weight: bold;
                                border: 1px solid black;
                                border-collapse: collapse;
                                }
                                td {
                                border-bottom: 1px solid black;
                                border-collapse: collapse;
                                }
                            </style>

                            <h5 style="text-align:center;font-weight:bold;">Kárdex de inventario</h5>
                            <h6>Kárdex de  
                                <span t-esc="context_timestamp(o.date_from).strftime('%Y-%m-%d %H:%M:%S')"/>
                                  a  <span t-esc="context_timestamp(o.date_to).strftime('%Y-%m-%d %H:%M:%S')"/>
                            </h6>

                            <t t-set="locations" t-value="set(records.mapped('group_name'))"/>
                            <table style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="10%" rowspan="2">Fecha</th>
                                        <th width="7.5%" rowspan="2">Origen</th>
                                        <th width="25%" rowspan="2">Producto</th>
                                        <th width="5%" rowspan="2">Unidad</th>
                                        <th width="8%" rowspan="2">Ubicación origen</th>
                                        <th width="8%" rowspan="2">Ubicación destino</th>
                                        <th width="10%" rowspan="2">Lote/N° de serie</th>
                                        <th width="7.5%" rowspan="2">Inicial</th>
                                        <th width="7.5%" rowspan="2">Hecho</th>
                                        <th width="7.5%" rowspan="2">Final</th>
                                        <th width="2%" rowspan="2">Costo</th>
                                        <th width="2%" rowspan="2">Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="locations" t-as="location">
                                        <tr>
                                            <td style="text-align:left;" colspan="12">
                                                <strong style="color: #AF8127">Ubicación y articulo:</strong>
                                                <strong t-esc="location"/>
                                            </td>
                                        </tr>
                                        <tr t-foreach="records.filtered(lambda line: line.group_name == location).sorted(date, reverse=False)" t-as="a">
                                            <td style='text-align: center;'>
                                                <span t-esc="a.date"/>
                                            </td>
                                            <td style='text-align: center;'>
                                                <span t-esc="a.origin"/>
                                            </td>
                                            <td style='text-align: left;'>
                                                <span t-esc="a.product_id.display_name"/>
                                            </td>
                                            <td style='text-align: center;'>
                                                <span t-esc="a.product_uom_id.name"/>
                                            </td>
                                            <td style='text-align: center;'>
                                                <span t-esc="a.location_id.name"/>
                                            </td>
                                            <td style='text-align: center;'>
                                                <span t-esc="a.location_dest_id.name"/>
                                            </td>
                                            <td style='text-align: center;'>
                                                <span t-esc="a.lot_id.name"/>
                                            </td>
                                            <td style='text-align: right;'>
                                                <span t-esc="'{0:,.2f}'.format(round(a.initial_balance, 2))"/>
                                            </td>
                                            <td style='text-align: right;'>
                                                <span t-esc="'{0:,.2f}'.format(round(a.qty_done, 2))"/>
                                            </td>
                                            <td style='text-align: right;'>
                                                <span t-esc="'{0:,.2f}'.format(round(a.balance, 2))"/>
                                            </td>
                                            <td style='text-align: right;'>
                                                <span t-esc="a.unit_cost"/>
                                            </td>
                                            <td style='text-align: right;'>
                                                <span t-esc="a.total_cost"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>