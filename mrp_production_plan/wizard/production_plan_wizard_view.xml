<odoo>
    <data>
        <record id="prod_plan_wizard_form_view" model="ir.ui.view">
            <field name="name">prod_plan_wizard_form_view</field>
            <field name="model">production.plan.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar plan de producción">
                    <sheet>
                        <p>¿Generar plan de producción?</p>
                    </sheet>
                    <footer>
                        <button name="action_generate" string="Generar" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cerrar" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        
        <record id="action_view_production_plan" model="ir.actions.act_window">
            <field name="name">Plan de producción</field>
            <field name="res_model">production.plan.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="prod_plan_wizard_form_view"/>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Plan de producción" id="main_menu_production_menu" parent="mrp.mrp_planning_menu_root" sequence="1" action="action_view_production_plan"/>

    </data>
</odoo>