                <field name="qty_to_produce" optional="show"/>
                <field name="uom" optional="show"/>
                <field name="planned_date" optional="show"/>
                <field name="sale_date" optional="show"/>
                <field name="family" optional="show"/>
                <field name="mrp_date" optional="show"/>
                <field name="comp_date" optional="show"/>
                <field name="op_name" optional="show"/>
                <field name="pack" optional="show"/>
                <field name="op_item_name" optional="show"/>
                <field name="code_item_name" optional="show"/>
                <field name="qty" optional="show"/>
                <field name="dimension" optional="show"/>
                <field name="incomming_date" optional="show"/>
