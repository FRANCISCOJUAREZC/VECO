<odoo>
  <data>

    <record id="production_plan_form_view" model="ir.ui.view">
        <field name="name">production_plan_form_view</field>
        <field name="model">mrp.production.plan.item</field>
        <field name="arch" type="xml">
            <form string="Plan de produccion">
              <sheet>
                <group>
                    <group>     
                        <field name="sale_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="qty_to_produce" readonly="1"/>
                        <field name="uom" readonly="1"/>
                        <field name="planned_date" readonly="1"/>
                        <field name="sale_date" readonly="1"/>
                        <field name="family" readonly="1"/>
                    </group>
                    <group>     
                        <field name="mrp_date" readonly="1"/>
                        <field name="comp_date" />
                        <field name="mrp_id" readonly="1"/>
                        <field name="pack" />
                        <field name="status" />
                        <field name="client_delivery_date" readonly="1"/>
                        <field name="invoice_list" readonly="1"/>
                        <field name="delay" readonly="1"/>
                        <field name="notes" />
                    </group>
                </group>

                <notebook>
                    <page string="Habilitado" name="hability">
                        <group>
                          <field name="hability_mrp_id" readonly="1"/>
                          <field name="hability_product_id" readonly="1"/>
                          <field name="hability_qty" readonly="1"/>
                          <field name="hability_dimension" readonly="1"/>
                          <field name="hability_incomming_date" readonly="1"/>
                        </group>
                    </page>
                    <page string="Campos calculados" name="hability">
                        <group>
                          <group>
                              <field name="completed" readonly="1"/>
                              <field name="delay_days" readonly="1"/>
                              <field name="sale_time" readonly="1"/>
                              <field name="plant_time" readonly="1"/>
                              <field name="sale_week" readonly="1"/>
                              <field name="sale_month" readonly="1"/>
                              <field name="sale_year" readonly="1"/>
                              <field name="weeknum" readonly="1"/>
                          </group>
                          <group>
                            <field name="mrp_month" readonly="1"/>
                            <field name="year" readonly="1"/>
                            <field name="prod_delay_warehouse" readonly="1"/>
                            <field name="production" readonly="1"/>
                            <field name="is_delivery" readonly="1"/>
                            <field name="diff_days_delivery" readonly="1"/>
                            <field name="full_delivered" readonly="1"/>
                          </group>
                        </group>
                    </page>
                </notebook>
              </sheet>

            </form>
        </field>
    </record>

    

    <record id="production_plan_tree_view" model="ir.ui.view">
        <field name="name">production_plan_tree_view</field>
        <field name="model">mrp.production.plan.item</field>
        <field name="arch" type="xml">
            <tree string="Plan de producción">
                <field name="sale_line_id" readonly="1"/>
                <field name="in_date" readonly="1"/>
                <field name="sale_id" readonly="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="qty_to_produce" readonly="1"/>
                <field name="uom" readonly="1"/>
                <field name="planned_date" readonly="1"/>
                <field name="sale_date" readonly="1"/>
                <field name="family" readonly="1"/>
                <field name="mrp_date" readonly="1"/>
                <field name="comp_date" />
                <field name="mrp_id" readonly="1"/>
                <field name="pack" />
                <field name="hability_mrp_id" readonly="1"/>
                <field name="hability_product_id" readonly="1"/>
                <field name="hability_qty" readonly="1"/>
                <field name="hability_dimension" readonly="1"/>
                <field name="hability_incomming_date" readonly="1"/>
                <field name="status" />
                <field name="client_delivery_date" readonly="1"/>
                <field name="invoice_list" readonly="1"/>
                <field name="delay" readonly="1"/>
                <field name="notes" />
                <field name="completed" readonly="1"/>
                <field name="delay_days" readonly="1"/>
                <field name="sale_time" readonly="1"/>
                <field name="plant_time" readonly="1"/>
                <field name="sale_week" readonly="1"/>
                <field name="sale_month" readonly="1"/>
                <field name="sale_year" readonly="1"/>
                <field name="weeknum" readonly="1"/>
                <field name="mrp_month" readonly="1"/>
                <field name="year" readonly="1"/>
                <field name="prod_delay_warehouse" readonly="1"/>
                <field name="production" readonly="1"/>
                <field name="is_delivery" readonly="1"/>
                <field name="diff_days_delivery" readonly="1"/>
                <field name="full_delivered" readonly="1"/>
            </tree>
        </field>
    </record>
    
    <record id="action_view_production_plan_show" model="ir.actions.act_window">
        <field name="name">Plan de producción</field>
        <field name="res_model">mrp.production.plan.item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="production_plan_tree_view"/>
        <field name="target">current</field>
    </record>

    <menuitem name="Ver plan de producción" id="main_menu_view_production_plan"
              parent="mrp.mrp_planning_menu_root" sequence="1" action="action_view_production_plan_show"/>

  </data>
</odoo>