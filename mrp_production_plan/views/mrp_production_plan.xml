<odoo>
  <data>

    <record id="production_plan_form_view" model="ir.ui.view">
        <field name="name">production_plan_form_view</field>
        <field name="model">mrp.production.plan.item</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sale_line_id" />
                    <field name="sale_id" />
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="qty_to_produce" />
                    <field name="uom" />
                    <field name="planned_date" />
                    <field name="sale_date" />
                    <field name="family" />
                    <field name="mrp_id" />
                    <field name="pack" />
                    <field name="op_item_name" />
                    <field name="code_item_name" />
                    <field name="qty" />
                    <field name="dimension" />
                    <field name="incomming_date" />
                </group>

            </form>
        </field>
    </record>

    <record id="production_plan_tree_view" model="ir.ui.view">
        <field name="name">production_plan_tree_view</field>
        <field name="model">mrp.production.plan.item</field>
        <field name="arch" type="xml">
            <tree string="Plan de producción" editable="bottom">
                <field name="sale_line_id" />
                <field name="sale_id" />
                <field name="partner_id" />
                <field name="product_id" />
                <field name="qty_to_produce" />
                <field name="uom" />
                <field name="planned_date" />
                <field name="sale_date" />
                <field name="family" />
                <field name="mrp_id" />
                <field name="pack" />
                <field name="op_item_name" />
                <field name="code_item_name" />
                <field name="qty" />
                <field name="dimension" />
                <field name="incomming_date" />
            </tree>
        </field>
    </record>
    
    <record id="action_view_production_plan_show" model="ir.actions.act_window">
        <field name="name">Plan de producción</field>
        <field name="res_model">mrp.production.plan.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="production_plan_tree_view"/>
        <field name="target">current</field>
    </record>
    
    <menuitem name="Ver plan de producción" id="main_menu_view_production_plan"
              parent="mrp.mrp_planning_menu_root" sequence="1" action="action_view_production_plan_show"/>

  </data>
</odoo>