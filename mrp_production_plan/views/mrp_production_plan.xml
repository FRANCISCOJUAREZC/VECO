<odoo>
    <data>
        <record id="production_plan_form_view" model="ir.ui.view">
            <field name="name">production_plan_form_view</field>
            <field name="model">mrp.production.plan.item</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="sale_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="qty_to_produce" readonly="1"/>
                                <field name="uom" readonly="1"/>
                                <field name="planned_date" readonly="1"/>
                                <field name="sale_date" readonly="1"/>
                                <field name="family" readonly="1"/>
                            </group>
                            <group>
                                <field name="mrp_date" readonly="0"/>
                                <field name="in_date" readonly="1" invisible="1"/>
                                <field name="comp_date"/>
                                <field name="mrp_id" readonly="1"/>
                                <field name="pack"/>
                                <field name="status"/>
                                <field name="client_delivery_date" readonly="1"/>
                                <field name="client_delivery_date_formatted"/>
                                <field name="invoice_list" readonly="1"/>
                                <field name="delay" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="hability" string="Enabled Productos">
                                <group>
                                    <field name="subproduct_line_ids" nolabel="1">
                                        <tree>
                                            <field name="hability_mrp_id" readonly="1"/>
                                            <field name="hability_product_id" readonly="1"/>
                                            <field name="hability_qty" readonly="1"/>
                                            <field name="hability_dimension" readonly="1"/>
                                            <field name="hability_incomming_date" readonly="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="computed_fields" string="Computed Fields">
                                <group>
                                    <group>
                                        <field name="completed" readonly="1"/>
                                        <field name="delay_days" readonly="1"/>
                                        <field name="sale_time" readonly="1"/>
                                        <field name="plant_time" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="prod_delay_warehouse" readonly="1"/>
                                        <field name="production" readonly="1"/>
                                        <field name="is_delivery" readonly="1"/>
                                        <field name="diff_days_delivery" readonly="1"/>
                                        <field name="full_delivered" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="production_plan_tree_view" model="ir.ui.view">
            <field name="name">production_plan_tree_view</field>
            <field name="model">mrp.production.plan.item</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" limit="10" editable="top">
                    <field name="sale_line_id" readonly="1" invisible="1"/>
                    <field name="in_date" readonly="1" invisible="1"/>
                    <field name="sale_id" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="qty_to_produce" readonly="1"/>
                    <field name="uom" readonly="1"/>
                    <field name="planned_date" readonly="1"/>
                    <field name="sale_date" readonly="1"/>
                    <field name="family" readonly="1"/>
                    <field name="mrp_date" readonly="1"/>
                    <field name="comp_date"/>
                    <field name="mrp_id" readonly="1"/>
                    <field name="pack"/>
                    <field name="subproduct_line_ids"/>
                    <field name="status"/>
                    <field name="client_delivery_date" readonly="1" invisible="1"/>
                    <field name="client_delivery_date_formatted"/>
                    <field name="invoice_list" readonly="1"/>
                    <field name="delay" readonly="1"/>
                    <field name="completed" readonly="1"/>
                    <field name="delay_days" readonly="1"/>
                    <field name="sale_time" readonly="1"/>
                    <field name="plant_time" readonly="1"/>
                    <field name="prod_delay_warehouse" readonly="1"/>
                    <field name="production" readonly="1"/>
                    <field name="is_delivery" readonly="1"/>
                    <field name="diff_days_delivery" readonly="1"/>
                    <field name="full_delivered" readonly="1"/>
                </tree>
            </field>
        </record>
        <record id="view_production_plan_search" model="ir.ui.view">
            <field name="name">view.production.plan.search</field>
            <field name="model">mrp.production.plan.item</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_id"/>
                    <field name="family"/>
                    <field name="partner_id"/>
                    <field name="sale_id"/>
                    <field name="mrp_id"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter name="family_groupby" string="Family" domain="[]" context="{'group_by' : 'family'}"/>
                        <filter name="product_groupby" string="Product" domain="[]" context="{'group_by' : 'product_id'}"/>
                        <filter name="customer_groupby" string="Customer" domain="[]" context="{'group_by' : 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_view_production_plan_show" model="ir.actions.act_window">
            <field name="name">Production Plan</field>
            <field name="res_model">mrp.production.plan.item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="production_plan_tree_view"/>
            <field name="target">current</field>
        </record>
        <record model="ir.actions.server" id="action_run_production_plan">
            <field name="name">Production Plan</field>
            <field name="model_id" ref="model_mrp_production_plan_item"/>
            <field name="state">code</field>
            <field name="code">
                action = model.run_production_plan()
            </field>
        </record>

    <menuitem
        id="main_menu_view_production_plan"
        action="action_run_production_plan"
        name="Production Plan" parent="mrp.mrp_planning_menu_root" sequence="1"/>
    </data>
</odoo>