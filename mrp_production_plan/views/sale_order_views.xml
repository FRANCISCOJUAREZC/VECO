<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_sale_order_mrp_production_plan_form">
        <field name="name">view.sale.order.mrp.production.plan.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="after">
            	<field name="plant_commitment_date"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group[1]/group[2]/field[@name='tax_id']" position="after">
            	<field name="plant_commitment_date"/>
            </xpath>
        </field>
    </record>
</odoo>
