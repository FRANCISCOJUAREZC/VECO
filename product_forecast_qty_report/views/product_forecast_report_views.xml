<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model='ir.ui.view' id='view_product_forecast_report_tree'>
        <field name='name'>view.product.forecast.report.tree</field>
        <field name='model'>product.forecast.report</field>
        <field name='arch' type='xml'>
            <tree decoration-info="line_type == 'on_hand'" decoration-danger="line_type == 'outgoing'" decoration-success="line_type == 'incoming'">
                <field name='line_type' invisible="1"/>
                <field name='product_id'/>
                <field name="product_qty" sum="Product Qty"/>
                <field name="product_uom" groups="uom.group_uom"/>
                <field name="lot_id" groups="stock.group_production_lot"/>
                <field name="picking_id"/>
                <field name="stock_move_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_product_forecast_report_form">
        <field name="name">view.product.forecast.report.form</field>
        <field name="model">product.forecast.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" attrs="{'invisible': [('line_type', '=', 'on_hand')]}"/>
                </header>
                <sheet>
                    <h1>
                        <h1>Product - </h1>
                        <field name="product_id"/>
                    </h1>
                    <group>
                        <group>
                            <field name="line_type" invisible="1"/>
                            <field name="picking_id" attrs="{'invisible': [('line_type', '=', 'on_hand')]}"/>
                            <field name="stock_move_id" attrs="{'invisible': [('line_type', '=', 'on_hand')]}"/>
                            <field name="location_id" groups="stock.group_stock_multi_locations"/>
                            <field name="location_dest_id" groups="stock.group_stock_multi_locations" attrs="{'invisible': [('line_type', '=', 'on_hand')]}"/>
                            <field name="lot_id" groups="stock.group_production_lot"/>
                            <label for="product_qty"/>
                            <div>
                                <field name="product_qty" class="oe_inline"/>
                                <field name="product_uom" class="oe_inline" groups="uom.group_uom"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_product_forecast_report_search" model="ir.ui.view">
        <field name="name">view.product.forecast.report.search</field>
        <field name="model">product.forecast.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <filter string="Incoming" name="incoming" domain="[('line_type', '=', 'incoming')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('line_type', '=', 'outgoing')]"/>
                <filter name="line_type_groupby" string="Line Type" domain="[]" context="{'group_by' : 'line_type'}"/>
            </search>
        </field>
    </record>
</odoo>
